<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css">
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
            <link rel="stylesheet" href="/css/style.css">
            
        {% endblock %}

    </head>
    <body>
    <header class="text-center">
    <nav>
        <div class="header row">
            <div class="col-2 titre">
                Gundam France
            </div>
            <div class="col-8">
                <div class="col-12">
                <input type="text" name="search" id="search">
                </div>
                <div class="col-12 menu mt-2">
                <span class="category"><a href="#">HG</a></span>
                <span class="category"><a href="#">MG</a></span>
                <span class="category"><a href="#">PG</a></span>
                <span class="category"><a href="#">SD</a></span>
                <span class="category"><a href="#">P-Bandai</a></span>
                <span class="category"><a href="#">No Grade</a></span>
                <span class="category"><a href="/home/all">All</a></span>
                </div>
            </div>
            <div class="col-2">
                {% if is_granted("ROLE_ADMIN") %}
                <div class="menu" >
                        <span class="mx-4">
                            <a href="/account"><i class="fa-solid fa-user"></i></a>
                        </span>
                        <span class="mx-4">
                            <a href="/logout"><i class="fa-solid fa-right-from-bracket"></i></a>
                        </span>
                        <span class="mx-4">
                            <a href="/admin"><i class="fa-solid fa-gear"></i></a>
                        </span>
                    </div>
                    <div class="menu mt-3" >
                        <span class="mx-4">
                            <a href="#"><i class="fa-solid fa-heart"></i></a>
                        </span>
                        <span class="mx-4">
                            <a href="#"><i class="fa-solid fa-cart-shopping"></i></a>
                        </span>
                    </div>
                {% elseif is_granted("ROLE_USER") %}
                
                <div class="menu" >
                    <span class="mx-4">
                        <a href="/account"><i class="fa-solid fa-user"></i></a>
                    </span>
                    <span class="mx-4">
                        <a href="/logout"><i class="fa-solid fa-right-from-bracket"></i></a>
                    </span>
                </div>
                <div class="menu mt-3">
                    <span class="mx-4">
                        <a href="#"><i class="fa-solid fa-heart"></i></a>
                    </span>
                    <span class="mx-4">
                        <a href="#"><i class="fa-solid fa-cart-shopping"></i></a>
                    </span>
                </div>
                {% else %}
                <div class="menu">
                    <span>
                        <a href="/login"><i class="fa-solid fa-user"></i></a>
                    </span>
                </div>
                <div class="menu mt-3">
                    <a href="#"><i class="fa-solid fa-cart-shopping"></i></a>
                </div>
                {% endif %}
            </div>
        </div>
    </nav>
    </header>
    <main class="wrapper">
        {% block body %}{% endblock %}
    </main>
    <footer class="footer primary mt-5">
    Copyright © 2019 - Example
    </footer>
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
            <script src="/public/js/script.js"></script>
        {% endblock %}
    </body>
</html>
